public class main {

    public static void main(String[] args) {
        System.out.println("Kolon 1: ");
        int a;
        for (a = 1; a <= 100; a++)
            if (a % 15 == 0)
                System.out.print(a + " ");//çıktı yan yana görünsün diye böyle bir boşluk bıraktım
        System.out.println("");//Enter görevi çıktıyı bir alt satıra taşımak için.
        System.out.println("Kolon 2: ");
        int b;
        for (b = 1; b <= 30; b++)
            if (b % 5 == 0)
                System.out.print(b + " ");//çıktı yan yana görünsün diye böyle bir boşluk bıraktım
        System.out.println("");//Enter görevi çıktıyı bir alt satıra taşımak için.
        System.out.println("Kolon 3: ");
        int c;
        for (c = 100; c >= 50; c--)
            if (c % 10 == 0)
                System.out.print(c + " ");//çıktı yan yana görünsün diye böyle bir boşluk bıraktım
        System.out.println("");//Enter görevi çıktıyı bir alt satıra taşımak için.
        System.out.println("Kolon 4: ");
        int d;
        for (d = 2; d <= 64; d= d*2)
                System.out.print(Math.pow(d,1) + " ");//çıktı yan yana görünsün diye böyle bir boşluk bıraktım
        }
    }
